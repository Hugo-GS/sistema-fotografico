<form action="/sistemaAdmin/registrar_servicio" method="post" class="formulario_sistema">
    <fieldset class="formulario_sistema_fieldset">
      <legend>Registrar Servicio Fotogr√°fico</legend>
      <div>
        <label for="concepto">
