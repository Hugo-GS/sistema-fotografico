<style>
  legend{
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 5px;
  }
  .formulario_sistema{
    width: 300px;
    background-color: rgb(255, 255, 255);
    border-radius: 5px;
    padding: 10px;
  }
  .formulario_sistema_fieldset {
    display: flex;
    flex-direction: column;
    padding: 10px;
  }
  .formulario_sistema_fieldset div{
    margin-bottom: 10px;
  }
  label{
    display: inline-block;
    width: 100px;
  }
  input[type="submit"]{
    margin-top: 15px;
    border-radius: 5px;
    background-color: #FF6471;
    border: none;
    padding: 5px;
    color: white;
  }
</style>
<form action="/sistemaAdmin/registrar_servicio_fotografico" method="post" class="formulario_sistema">
    <fieldset class="formulario_sistema_fieldset">
      <legend>Registrar Servicio Fotográfico</legend>
      <div class="input-container">
        <input
          type="text"
          class="input"
          placeholder=""
          maxlength="255"
          name="nombre"
          required
        />
        <label class="input-label">Nombre: <abbr title="required" aria-label="required">*</abbr></label>
      </div>
      <div class="input-container">
        <input
          type="text"
          class="input"
          placeholder=""
          maxlength="255"
          name="descripcionDetalleProducto"
          required
        />
        <label class="input-label">Descripción: <abbr title="required" aria-label="required">*</abbr></label>
      </div>

      <div class="input-container">
        <input
          type="number"
          step="0.01"
          class="input"
          placeholder=""
          min="1" 
          name="precio"
          required
        />
        <label class="input-label">Valor: <abbr title="required" aria-label="required">*</abbr></label>
      </div>
      <div>
        <input type="submit" value="Registrar Impresión">
      </div>
    </fieldset>
  </form>